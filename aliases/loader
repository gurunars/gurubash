#!/bin/bash
alias ls='ls -h --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ll='ls -hl'
alias la='ls -hA'
alias l='ls -hCF'
alias z='cd ..'
alias zz='cd ../..'
alias zzz='cd ../../..'
alias zzzz='cd ../../../..'
alias zzzzz='cd ../../../../..'
alias zzzzzz='cd ../../../../../..'
alias zzzzzzz='cd ../../../../../../..'